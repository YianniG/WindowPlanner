<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="plan.glo.windowplanner">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity   android:name=".MainActivity"
                    android:theme="@style/NoToolbarTheme"
                    android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TaskFormActivity"
            android:theme="@style/NoToolbarTheme"
            android:label="@string/taskform_title"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ImportCalendarActivity"
            android:theme="@style/AppTheme"
            android:label="@string/import_importbtn"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>